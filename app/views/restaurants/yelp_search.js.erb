<% if @restaurants.empty? %>
  alert("No restaurants found. Please widen your search.");
<% else %>
  var restaurants = [];
  <% @restaurants.each do |restaurant| %>
    var current_restaurant = [<%= restaurant.latitude %>, <%= restaurant.longitude %>, '<%= restaurant.name %>', '<%= restaurant.image_url %>', <%= restaurant.rating %>, '<%= restaurant.rating_img_url %>', '<%= restaurant.address %>', '<%= restaurant.url %>'];
    restaurants.push(current_restaurant);
  <% end %>
<% end %>
placeRestaurantMarkers(restaurants);
